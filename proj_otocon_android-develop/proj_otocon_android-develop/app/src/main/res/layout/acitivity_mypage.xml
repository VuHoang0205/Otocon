<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="org.atmarkcafe.otocon.model.UserProfileCardModel" />

        <variable
            name="activity"
            type="org.atmarkcafe.otocon.function.mypage.MyPageMenuFragment" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar"
            app:navigationIcon="@drawable/ic_nav_close">

            <TextView
                style="@style/header_toolbar"
                android:text="@string/my_page_title" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/common_notification_button"
                android:layout_gravity="right">

                <ImageView
                    android:id="@+id/bell"
                    android:layout_width="14dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="29dp"
                    android:src="@drawable/ic_bell"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/toolbar_notify"
                    style="@style/text_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@drawable/xml_background_bell"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:minWidth="20dp"
                    android:padding="0dp"
                    android:text="1"
                    android:visibility="gone"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    app:layout_constraintCircle="@+id/bell"
                    app:layout_constraintCircleAngle="45"
                    app:layout_constraintCircleRadius="14dp" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/mypage_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/mypage_background_header"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:alpha="0.2"
                    android:background="#F7648F"
                    app:layout_constraintBottom_toBottomOf="@+id/mypage_info"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/mypage_message_guide"
                    style="@style/text_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:text="@string/my_page_message_guide"
                    android:textColor="#EF6590"
                    android:textSize="12.25sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/mypage_flow_using"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()-> activity.onClickReMatch()}"
                    android:padding="12.25dp"
                    android:text="@string/my_page_rematch_flow_using"
                    android:textColor="@color/color161616"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mypage_message_guide" />

                <View
                    android:id="@+id/mypage_avatar_background"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:background="@drawable/xml_oval_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mypage_flow_using" />

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp"
                    app:contentPadding="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/mypage_avatar_background"
                    app:layout_constraintEnd_toEndOf="@+id/mypage_avatar_background"
                    app:layout_constraintStart_toStartOf="@+id/mypage_avatar_background"
                    app:layout_constraintTop_toTopOf="@+id/mypage_avatar_background">

                    <ImageView
                        android:id="@+id/mypage_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="@{()->activity.changeGallery(1)}"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_take_photo" />

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/sub_avatar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/mypage_avatar_background" >

                    <include
                        android:id="@+id/avatar_01"
                        layout="@layout/layout_avatar"
                        app:position="@{2}"
                        app:canDelete="@{model.hasAvatar(2)}"
                        app:size="@{model.numberPhoto()}"
                        app:fragment="@{activity}"/>

                    <include
                        android:id="@+id/avatar_02"
                        layout="@layout/layout_avatar"
                        app:fragment="@{activity}"
                        app:canDelete="@{model.hasAvatar(3)}"
                        app:size="@{model.numberPhoto()}"
                        app:position="@{3}"/>


                    <include
                        android:id="@+id/avatar_03"
                        layout="@layout/layout_avatar"
                        app:fragment="@{activity}"
                        app:canDelete="@{model.hasAvatar(4)}"
                        app:size="@{model.numberPhoto()}"
                        app:position="@{4}"/>

                    <include
                        android:id="@+id/avatar_04"
                        layout="@layout/layout_avatar"
                        app:canDelete="@{model.hasAvatar(5)}"
                        app:size="@{model.numberPhoto()}"
                        app:fragment="@{activity}"
                        app:position="@{5}"/>

                </LinearLayout>


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/contrain_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sub_avatar_layout">

                    <TextView
                        android:id="@+id/mypage_name"
                        style="@style/text_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@{model.name_mei}"
                        android:textColor="@color/color161616"
                        android:textSize="17.5sp"
                        app:layout_constraintEnd_toStartOf="@id/premium" />

                    <TextView
                        android:id="@+id/premium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/xml_background_premium"
                        android:drawableLeft="@drawable/ic_stars"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:text="プレミアム会員"
                        android:textColor="#FFDA00"
                        android:textSize="8.87sp"
                        android:visibility="@{model.type.equals(String.valueOf(2))?View.VISIBLE:View.GONE}"
                        app:layout_constraintBottom_toBottomOf="@id/mypage_name"
                        app:layout_constraintLeft_toRightOf="@id/mypage_name"
                        app:layout_constraintTop_toTopOf="@id/mypage_name" />
                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/mypage_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="15dp"
                    android:text="@{model.fomatAge(context,model)}"
                    android:textColor="@color/color161616"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/contrain_layout" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_page_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mypage_background_header" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>


        <include
            android:id="@+id/loading"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</layout>