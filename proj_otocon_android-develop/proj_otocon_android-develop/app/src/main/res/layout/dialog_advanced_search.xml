<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="presenter"
            type="org.atmarkcafe.otocon.function.advancedsearch.AdvancedSearchPresenter" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/advanced_search_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/xml_background_dialog"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="11dp"
                android:padding="4dp"
                android:src="@drawable/ic_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/advanced_menu_title"
                android:textColor="@color/color_black_2D2D2D"
                android:textSize="16sp"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/reset"
                android:layout_width="51dp"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/xml_advanced_search_button_reset"
                android:padding="0dp"
                android:gravity="center"
                android:text="@string/reset"
                android:textColor="@drawable/xml_text_reset_button"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="15dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reset" />

            <CheckBox
                android:id="@+id/only_party"
                android:layout_width="56dp"
                android:layout_height="30dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="15dp"
                android:button="@drawable/ic_advanced_search_title_validate"
                android:checked="@={presenter.isOnlyParty}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerview" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="0dp"
                android:lineSpacingExtra="4dp"
                android:text="@string/advanced_menu_only_paties"
                android:textColor="#161616"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/only_party"
                app:layout_constraintEnd_toStartOf="@+id/only_party"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/only_party" />

            <Button
                android:id="@+id/submit"
                style="@style/Button.Green"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="53dp"
                android:layout_marginBottom="35dp"
                android:text="@string/advanced_menu_btn_search"
                android:textAppearance="@style/text_normal"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerview" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:layout_marginEnd="18dp"
                android:src="@drawable/ic_advanced_search_arrow_right"
                android:tint="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@+id/submit"
                app:layout_constraintEnd_toEndOf="@+id/submit"
                app:layout_constraintTop_toTopOf="@+id/submit"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</layout>