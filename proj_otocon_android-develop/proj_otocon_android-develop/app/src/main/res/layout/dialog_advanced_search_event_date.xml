<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/event_date_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/xml_background_dialog"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:layout_marginStart="9dp"
                android:padding="6dp"
                android:src="@drawable/ic_left"
                app:layout_constraintBottom_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/title" />

            <TextView
                android:id="@+id/title"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/advanced_search_title_event_date"
                android:textColor="@color/color_black_2D2D2D"
                android:textSize="16sp"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/reset"
                android:layout_width="51dp"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="14dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/reset"
                android:textColor="@drawable/xml_text_reset_button"
                android:background="@drawable/xml_advanced_search_button_reset"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="※複数選択ができます"
                android:textColor="#828181"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/reset"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/reset" />

            <ImageView
                android:id="@+id/calendar_arrow_left"
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:layout_margin="0dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:src="@drawable/ic_calendar_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reset" />

            <ImageView
                android:id="@+id/calendar_arrow_right"
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:layout_margin="0dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:src="@drawable/ic_calendar_arrow_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reset" />

            <TextView
                android:id="@+id/calendar_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month"
                android:textColor="@color/color_black_000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/calendar_arrow_left"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/calendar_arrow_left" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/calendar_day_of_week"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginTop="5dp"
                android:background="#E7E6E3"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toBottomOf="@+id/calendar_arrow_left"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <android.support.v4.view.ViewPager
                android:id="@+id/calendar_date_of_month_view_pager"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toBottomOf="@+id/calendar_day_of_week"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </android.support.v4.view.ViewPager>

            <Button
                android:id="@+id/submit"
                style="@style/Button.Green"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="53dp"
                android:layout_marginBottom="32dp"
                android:text="@string/advanced_search_date_of_week_submit"
                android:textAppearance="@style/text_normal"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calendar_date_of_month_view_pager" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:layout_marginEnd="18dp"
                android:src="@drawable/ic_advanced_search_arrow_right"
                android:tint="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@+id/submit"
                app:layout_constraintEnd_toEndOf="@+id/submit"
                app:layout_constraintTop_toTopOf="@+id/submit" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>