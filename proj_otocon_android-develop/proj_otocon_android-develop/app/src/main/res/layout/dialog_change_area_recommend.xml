<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="29dp"
        android:background="@drawable/background_corrner_dialog_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/text_normal"
            android:layout_width="51dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/background_border_line_black_dialog"
            android:gravity="center"
            android:text="@string/reset"
            android:textColor="@color/color_black_2D2D2D"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            style="@style/text_normal"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginEnd="73dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:text="@string/select_an_area"
            android:textColor="@color/color_black_2D2D2D"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginTop="3dp"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/btnChange"
            android:layout_width="222dp"
            android:layout_height="38dp"
            android:layout_marginBottom="33dp"
            android:layout_marginTop="20dp"
            android:stateListAnimator="@animator/state_click_animator"
            android:background="@drawable/background_button_change_search_condition"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" />


        <Button
            android:id="@+id/btnChangeSearch"
            android:layout_width="115dp"
            android:layout_height="38dp"
            android:layout_marginBottom="33dp"
            android:layout_marginTop="20dp"
            android:stateListAnimator="@animator/state_click_animator"
            android:background="@drawable/background_change_search"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>