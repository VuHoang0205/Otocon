<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="dialog"
            type="org.atmarkcafe.otocon.function.config.DefaultSearchGenderFragment" />

        <variable
            name="gender"
            type="int" />

        <variable
            name="hasError"
            type="boolean" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/xlm_background_rules"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title"
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/advanced_search_title_gender"
                android:textColor="@color/color_black_2D2D2D"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--android:layout_width="7dp"-->
            <!--android:layout_height="11dp"-->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_left"
                android:scaleType="centerInside"
                android:onClick="@{() -> dialog.onBack()}"
                app:layout_constraintBottom_toBottomOf="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/title" />


            <Button

                android:id="@+id/reset"
                android:layout_width="51dp"
                android:layout_height="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/xml_advanced_search_button_reset"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@drawable/xml_text_reset_button"
                android:onClick="@{()-> dialog.onReset()}"
                android:text="@string/reset"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                android:checkedButton="@{gender == 1 ?  @id/male : gender == 2 ?@id/female : 0}"
                android:onCheckedChanged="@{dialog.onCheckedChanged}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reset">

                <RadioButton
                    android:id="@+id/male"
                    style="@style/advanced_gender_radio"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/confirm_information_male" />

                <RadioButton
                    android:id="@+id/female"
                    style="@style/advanced_gender_radio"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/confirm_information_Female" />

            </RadioGroup>

            <TextView
                android:id="@+id/gender_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/gender_emty"
                android:textColor="#F20606"
                android:textSize="11sp"
                android:visibility="@{hasError ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rg_gender" />


            <Button
                android:padding="0dp"
                android:id="@+id/confirm_first"
                android:background="@drawable/ic_btn_btn_gender_default"
                style="@style/text_bold"
                android:layout_width="222dp"
                android:layout_height="38dp"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="25dp"

                android:gravity="center"
                android:onClick="@{() -> dialog.onConfrim()}"
                android:text="@string/find_a_party"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/rg_gender"
                app:layout_constraintStart_toStartOf="@+id/rg_gender"
                app:layout_constraintTop_toBottomOf="@+id/gender_error" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>


</layout>