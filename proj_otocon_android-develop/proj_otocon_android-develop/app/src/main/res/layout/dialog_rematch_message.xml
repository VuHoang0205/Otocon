<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="dialog"
            type="org.atmarkcafe.otocon.dialog.DialogRematchMessage" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:layout_marginStart="28dp"
            android:paddingTop="28dp"
            android:paddingBottom="28dp"
            android:background="@drawable/xml_background_dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:lineSpacingExtra="10dp"
                android:text="@{dialog.message}"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/layoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7">

                <Button
                    android:visibility="@{dialog.nameButtonGreen != null ? View.VISIBLE : View.GONE}"
                    android:id="@+id/bnOk"
                    style="@style/Button.GreenBold"
                    android:layout_width="101dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:text="@{dialog.nameButtonGreen != null ? dialog.nameButtonGreen : @string/next}"
                    android:onClick="@{() -> dialog.onPressedOk()}"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toStartOf="@+id/cancel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:visibility="@{dialog.nameButtonBlack != null ? View.VISIBLE : View.GONE}"
                    android:id="@+id/cancel"
                    style="@style/Button.Black"
                    android:layout_width="101dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:text="@{dialog.nameButtonBlack != null ? dialog.nameButtonBlack : @string/cancel}"
                    android:onClick="@{() -> dialog.onPressedCancel()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/bnOk"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:visibility="@{dialog.nameCheckBox != null ? View.VISIBLE : View.GONE}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutButton">

                <CheckBox
                    android:id="@+id/check_box"
                    android:checked="@={dialog.checked}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:button="@drawable/xml_advanced_search_checkbox"
                    android:includeFontPadding="false"
                    android:paddingStart="6dp"
                    android:text="@{dialog.nameCheckBox != null ? dialog.nameCheckBox : @string/do_not_display_next_time}"
                    android:textColor="@color/colorFontTextBlack"
                    android:textSize="14sp" />
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>
</layout>