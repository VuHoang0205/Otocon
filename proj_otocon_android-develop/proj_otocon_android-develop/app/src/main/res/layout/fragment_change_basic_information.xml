<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="org.atmarkcafe.otocon.function.mypage.profile.EditUserInformationFragment"/>
        <variable
            name="model"
            type="org.atmarkcafe.otocon.model.UserInfo"/>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_left">

            <TextView
                style="@style/header_toolbar"
                android:text="@string/change_basic_user_information" />

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@id/bottom"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:onClick="@{() -> fragment.onHideKeyboard()}">

                <TextView
                    android:id="@+id/tv_error"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/cus_bg_notification_email"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:padding="10dp"
                    android:textColor="@color/colorRed"
                    android:textSize="13sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/contrain_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_error">

                    <TextView
                        android:id="@+id/tv_name_sei"
                        style="@style/text_bold_reigster"
                        android:layout_marginLeft="15dp"
                        android:setTextEndColor="@{@string/register_party_sei}"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/layout_edt_sei"
                        style="@style/style_input_party"
                        android:layout_width="0dp"
                        app:errorTextAppearance="@style/ErrorText"
                        app:hintEnabled="false"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/layout_edt_mei"
                        app:layout_constraintTop_toBottomOf="@id/tv_name_sei">

                        <android.support.design.widget.TextInputEditText
                            style="@style/text_normal_register_party"
                            android:background="@drawable/xml_background_input_register_party"
                            android:inputType="textPersonName"
                            android:maxLength="40"
                            android:text="@={model.name_sei}" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_name_mei"
                        style="@style/text_bold_reigster"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:setTextEndColor="@{@string/register_party_mei}"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_name_sei"
                        app:layout_constraintStart_toStartOf="@id/layout_edt_mei" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/layout_edt_mei"
                        style="@style/style_input_party"
                        android:layout_width="0dp"
                        app:errorEnabled="false"
                        app:errorTextAppearance="@style/ErrorText"
                        app:hintEnabled="false"
                        app:layout_constraintLeft_toRightOf="@id/layout_edt_sei"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_name_sei">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_mei"
                            style="@style/text_normal_register_party"
                            android:background="@drawable/xml_background_input_register_party"
                            android:inputType="textPersonName"
                            android:maxLength="40"
                            android:text="@={model.name_mei}" />
                    </android.support.design.widget.TextInputLayout>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/contrain_kana_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/contrain_name">

                    <TextView
                        android:id="@+id/tv_kana_sei"
                        style="@style/text_bold_reigster"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:setTextEndColor="@{@string/contact_kana_sei}"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/layout_edt_kana_sei"
                        style="@style/style_input_party"
                        android:layout_width="0dp"
                        app:errorTextAppearance="@style/ErrorText"
                        app:hintEnabled="false"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/layout_edt_kana_mei"
                        app:layout_constraintTop_toBottomOf="@id/tv_kana_sei">

                        <android.support.design.widget.TextInputEditText
                            style="@style/text_normal_register_party"
                            android:background="@drawable/xml_background_input_register_party"
                            android:inputType="textPersonName"
                            android:maxLength="40"
                            android:maxLines="1"
                            android:text="@={model.name_kanasei}" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_kana_mei"
                        style="@style/text_bold_reigster"
                        android:layout_marginLeft="15dp"
                        android:setTextEndColor="@{@string/contact_kana_mei}"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_kana_sei"
                        app:layout_constraintStart_toStartOf="@id/layout_edt_kana_mei" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/layout_edt_kana_mei"
                        style="@style/style_input_party"
                        android:layout_width="0dp"
                        app:errorTextAppearance="@style/ErrorText"
                        app:hintEnabled="false"
                        app:layout_constraintLeft_toRightOf="@id/layout_edt_kana_sei"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_kana_mei">

                        <android.support.design.widget.TextInputEditText
                            style="@style/text_normal_register_party"
                            android:background="@drawable/xml_background_input_register_party"
                            android:inputType="textPersonName"
                            android:maxLength="40"
                            android:text="@={model.name_kanamei}" />
                    </android.support.design.widget.TextInputLayout>
                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/txt_gender"
                    style="@style/text_bold_reigster"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="15dp"
                    android:setTextEndColor="@{@string/register_party_gender}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/contrain_kana_name" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_edt_gender"
                    style="@style/style_input_party"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="false"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_gender">

                    <android.support.design.widget.TextInputEditText
                        style="@style/text_normal_register_party"
                        android:background="@drawable/xml_background_input_register_party"
                        android:drawableRight="@drawable/ic_arrow_down"
                        android:editable="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:paddingEnd="12dp"
                        android:onClick="@{() -> fragment.selectGender()}"
                        android:text="@={model.nameGender}" />
                    <!--android:onClick="@{()-> presenter.selectGender()}"-->
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_birthday"
                    style="@style/style_input_party"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="15dp"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="false"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_edt_gender">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_birthday_year"
                            style="@style/text_bold_reigster"
                            android:setTextEndColor="@{@string/register_party_birthday_year}"
                            app:layout_constraintStart_toStartOf="@id/birthday_year"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/birthday_year"
                            style="@style/text_normal_register_party"
                            android:layout_width="0dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/xml_background_input_register"
                            android:drawableRight="@drawable/ic_arrow_down"
                            android:editable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:text="@{model.year}"
                            android:onClick="@{() -> fragment.showBirthdayDialog(0)}"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/birthday_month"
                            app:layout_constraintTop_toBottomOf="@id/txt_birthday_year" />
                        <!--android:onClick="@{()-> presenter.showBirthdayDialog(0)}"-->

                        <TextView
                            android:id="@+id/txt_birthday_month"
                            style="@style/text_bold_reigster"
                            android:setTextEndColor="@{@string/register_party_birthday_month}"
                            app:layout_constraintStart_toStartOf="@id/birthday_month"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/birthday_month"
                            style="@style/text_normal_register_party"
                            android:layout_width="0dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/xml_background_input_register"
                            android:drawableRight="@drawable/ic_arrow_down"
                            android:editable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:onClick="@{() -> fragment.showBirthdayDialog(1)}"
                            android:text="@{model.month}"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintLeft_toRightOf="@id/birthday_year"
                            app:layout_constraintRight_toLeftOf="@+id/birthday_day"
                            app:layout_constraintTop_toBottomOf="@id/txt_birthday_month" />
                        <!--android:onClick="@{()-> presenter.showBirthdayDialog(1)}"-->

                        <TextView
                            android:id="@+id/txt_birthday_day"
                            style="@style/text_bold_reigster"
                            android:setTextEndColor="@{@string/register_party_birthday_day}"
                            app:layout_constraintStart_toStartOf="@id/birthday_day"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/birthday_day"
                            style="@style/text_normal_register_party"
                            android:layout_width="0dp"
                            android:layout_height="38dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="0dp"
                            android:background="@drawable/xml_background_input_register"
                            android:clickable="false"
                            android:drawableRight="@drawable/ic_arrow_down"
                            android:editable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:onClick="@{() -> fragment.showBirthdayDialog(2)}"
                            android:text="@{model.day}"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintLeft_toRightOf="@+id/birthday_month"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txt_birthday_day" />
                        <!--android:onClick="@{()-> presenter.showBirthdayDialog(2)}"-->

                    </android.support.constraint.ConstraintLayout>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/noti_4"
                    style="@style/text_note_reigster"
                    android:layout_marginTop="3dp"
                    android:text="@string/party_register_noti_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/input_birthday" />

                <TextView
                    android:id="@+id/txt_tel"
                    style="@style/text_bold_reigster"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:setTextEndColor="@{@string/register_party_tel}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/noti_4" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_phone_number"
                    style="@style/style_input_party"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:hintEnabled="false"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_tel">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tel_1"
                            style="@style/text_normal_register_party"
                            android:layout_width="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/xml_background_input_register"
                            android:digits="1234567890"
                            android:gravity="center"
                            android:inputType="phone"
                            android:maxLength="3"
                            android:text="@={model.tel1}"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/tel_2" />

                        <View
                            android:layout_width="4.2dp"
                            android:layout_height="1.2dp"
                            android:background="@color/colorBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/tel_1"
                            app:layout_constraintRight_toLeftOf="@+id/tel_2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tel_2"
                            style="@style/text_normal_register_party"
                            android:layout_width="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/xml_background_input_register"
                            android:digits="1234567890"
                            android:gravity="center"
                            android:inputType="phone"
                            android:maxLength="4"
                            android:text="@={model.tel2}"
                            app:layout_constraintLeft_toRightOf="@+id/tel_1"
                            app:layout_constraintRight_toLeftOf="@+id/tel_3" />

                        <View
                            android:layout_width="4.2dp"
                            android:layout_height="1.2dp"
                            android:background="@color/colorBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/tel_2"
                            app:layout_constraintRight_toLeftOf="@+id/tel_3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tel_3"
                            style="@style/text_normal_register_party"
                            android:layout_width="0dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="0dp"
                            android:background="@drawable/xml_background_input_register"
                            android:digits="1234567890"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:maxLength="4"
                            android:text="@={model.tel3}"
                            app:layout_constraintLeft_toRightOf="@+id/tel_2"
                            app:layout_constraintRight_toRightOf="parent" />

                    </android.support.constraint.ConstraintLayout>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/noti_5"
                    style="@style/text_note_reigster"
                    android:layout_marginTop="4dp"
                    android:text="@string/party_register_noti_5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/input_phone_number" />




                <TextView
                    android:id="@+id/txt_address"
                    style="@style/text_bold_reigster"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="15dp"
                    android:setTextEndColor="@{@string/register_party_adddress}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/noti_5" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tv_address"
                    style="@style/style_input_party"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/txt_address">

                    <android.support.design.widget.TextInputEditText
                        style="@style/text_normal_register_party"
                        android:layout_width="match_parent"
                        android:background="@drawable/xml_background_input_register_party"
                        android:drawableRight="@drawable/ic_arrow_down"
                        android:editable="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:onClick="@{() -> fragment.selectAdrress()}"
                        android:text="@{model.namePrefecture}" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/txt_ponta_id"
                    style="@style/text_bold_reigster"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="15dp"
                    android:text="@string/ponta_id"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_address" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tv_ponta_id"
                    style="@style/style_input_party"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/txt_ponta_id">

                    <android.support.design.widget.TextInputEditText
                        style="@style/text_normal_register_party"
                        android:background="@drawable/xml_background_input_register_party"
                        android:imeOptions="actionDone"
                        android:maxLength="40"
                        android:singleLine="true"
                        android:text="@={model.ponta_id}" />
                </android.support.design.widget.TextInputLayout>

            </android.support.constraint.ConstraintLayout>
        </ScrollView>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_submit"
                style="@style/Button.GreenBold"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="37dp"
                android:layout_marginBottom="35dp"
                android:text="@string/next"
                android:onClick="@{() -> fragment.submit()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <include
            android:id="@+id/loading"
            layout="@layout/layout_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>
