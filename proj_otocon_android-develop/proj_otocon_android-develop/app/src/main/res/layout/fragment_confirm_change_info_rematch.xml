<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="org.atmarkcafe.otocon.utils.StringUtils"/>
        <variable
            name="fragment"
            type="org.atmarkcafe.otocon.function.mypage.profile.userinforematch.ViewChangeInfoRematchFragment"/>

        <variable
            name="model"
            type="org.atmarkcafe.otocon.function.mypage.profile.userinforematch.data.ModelUserInfoRematch"/>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_left">

            <TextView
                style="@style/header_toolbar"
                android:text="@string/title_view_information_rematch" />

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@id/bottom"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/contrain_confirm"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:lineSpacingExtra="11dp"
                    android:text="@string/change_information_on_rematch_noti1"
                    android:textColor="@color/colorFontTextBlack"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:lineSpacingExtra="11dp"
                    android:text="@string/rematch_flow"
                    android:textColor="@color/colorFontTextBlack"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv1" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#ADADAD"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvLink"
                    />

                <include
                    android:id="@+id/self_introduction"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/view1"
                    bind:key="@{@string/self_introduction}"
                    bind:value="@{StringUtils.replaceAll(model.common_description)}" />

                <include
                    android:id="@+id/talkable_language"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/self_introduction"
                    bind:key="@{@string/talkable_language}"
                    bind:value="@{StringUtils.replaceAll(model.basic_language)}" />

                <include
                    android:id="@+id/body_type"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/talkable_language"
                    bind:key="@{@string/body_type}"
                    bind:value="@{StringUtils.replaceAll(model.basic_body_type)}" />

                <include
                    android:id="@+id/occupation_details"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/body_type"
                    bind:key="@{@string/occupation_details}"
                    bind:value="@{StringUtils.replaceAll(model.job_description)}" />

                <include
                    android:id="@+id/school_name"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/occupation_details"
                    bind:key="@{@string/school_name}"
                    bind:value="@{StringUtils.replaceAll(model.job_university)}" />

                <include
                    android:id="@+id/character"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/school_name"
                    bind:key="@{@string/character}"
                    bind:value="@{StringUtils.replaceAll(model.lifestyle_character)}" />

                <include
                    android:id="@+id/sociability"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/character"
                    bind:key="@{@string/sociability}"
                    bind:value="@{StringUtils.replaceAll(model.lifestyle_sociability)}" />

                <include
                    android:id="@+id/charm_point"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/sociability"
                    bind:key="@{@string/charm_point}"
                    bind:value="@{StringUtils.replaceAll(model.lifestyle_charm_point)}" />

                <include
                    android:id="@+id/cohabitant"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/charm_point"
                    bind:key="@{@string/cohabitant}"
                    bind:value="@{StringUtils.replaceAll(model.lifestyle_cohabitant)}" />

                <include
                    android:id="@+id/hope_until_meeting"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cohabitant"
                    bind:key="@{@string/hope_until_meeting}"
                    bind:value="@{StringUtils.replaceAll(model.marriage_hope)}" />

                <include
                    android:id="@+id/i_would_like_to_see_my_friends"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/hope_until_meeting"
                    bind:key="@{@string/i_would_like_to_see_my_friends}"
                    bind:value="@{StringUtils.replaceAll(model.marriage_friend)}" />

                <include
                    android:id="@+id/first_date_cost"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/i_would_like_to_see_my_friends"
                    bind:key="@{@string/first_date_cost}"
                    bind:value="@{StringUtils.replaceAll(model.marriage_first_date_cost)}" />

                <include
                    android:id="@+id/sharing_hobbies"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/first_date_cost"
                    bind:key="@{@string/sharing_hobbies}"
                    bind:value="@{StringUtils.replaceAll(model.marriage_hobby)}" />

                <include
                    android:id="@+id/role_assignment_of_housework"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/sharing_hobbies"
                    bind:key="@{@string/role_assignment_of_housework}"
                    bind:value="@{StringUtils.replaceAll(model.after_marriage_house_work)}" />

                <include
                    android:id="@+id/parenting"
                    layout="@layout/item_info_rematch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/role_assignment_of_housework"
                    bind:key="@{@string/parenting}"
                    bind:value="@{StringUtils.replaceAll(model.after_marriage_parent)}" />

            </android.support.constraint.ConstraintLayout>
        </ScrollView>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_submit"
                style="@style/Button.GreenBold"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="37dp"
                android:layout_marginBottom="20dp"
                android:text="@string/edit_introduce"
                android:onClick="@{() -> fragment.submit()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <include
            android:id="@+id/loading"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </android.support.constraint.ConstraintLayout>
</layout>
