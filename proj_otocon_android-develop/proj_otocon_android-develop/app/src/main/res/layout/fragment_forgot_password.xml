<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        
        <variable
            name="fragment"
            type="org.atmarkcafe.otocon.function.forgotpassworld.ForgotPasswordFragment"/>

        <variable
            name="presenter"
            type="org.atmarkcafe.otocon.function.forgotpassworld.ForgotPasswordPresenter" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/forgot_password_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/bg_login"
            android:clickable="false"
            />

        <TextView
            android:id="@+id/tvError"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="37dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_error_login"
            android:gravity="center"
            android:lineSpacingExtra="7dp"
            android:text="@{presenter.message}"
            android:textColor="#F20606"
            android:textSize="13sp"
            android:visibility="@{presenter.hasError ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/forgot_password_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.35"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <TextView
            android:id="@+id/forgot_password_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:text="@string/text_notification_fogot"
            android:textColor="@color/color161616"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/input_email_hint"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvError" />

        <TextView
            android:id="@+id/input_email_hint"
            style="@style/text_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="20dp"
            android:text="@string/input_email"
            android:textColor="@color/color161616"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/email_input_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forgot_password_message" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/xml_background_input_layout"
            android:setTextError="@{presenter.messageError}"
            app:errorEnabled="@{presenter.hasError}"
            app:errorTextAppearance="@style/ErrorText"
            app:hintEnabled="false"
            app:layout_constraintBottom_toTopOf="@+id/button_submit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_email_hint">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/xml_background_edittext"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp"
                android:singleLine="true"
                android:text="@={presenter.emailAddress}"
                android:textColor="@color/color161616"
                android:textSize="16sp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_submit"
            style="@style/text_bold"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/xml_background_button_login"
            android:gravity="center"
            android:onClick="@{(view)->fragment.submit()}"
            android:stateListAnimator="@animator/state_click_animator"
            android:text="@string/forgot_password"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_input_layout" />


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_left">

            <TextView
                android:id="@+id/title"
                style="@style/header_toolbar"
                android:text="@string/forgot_passworld" />

        </android.support.v7.widget.Toolbar>

        <include
            android:id="@+id/loading_layout"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{presenter.isLoading? View.VISIBLE: View.GONE}" />

        <ViewStub
            android:id="@+id/viewstub_completed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorRed"
            android:inflatedId="@+id/viewstub_completed"
            android:layout="@layout/layout_completed_forgot_password" />

    </android.support.constraint.ConstraintLayout>
</layout>
