<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="presenter"
            type="org.atmarkcafe.otocon.function.beacon.GPSBeaconPresenter"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/beacon_top_layout"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/header"
                style="@style/header_toolbar"
                android:text="お近くのパーティー情報"
                android:paddingEnd="15dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_advanced_search"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:drawableEnd="@drawable/ic_search"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingEnd="15dp"
                android:text="@string/advanced_search"
                android:textColor="@color/color161616"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="@+id/header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/header" />

        </android.support.constraint.ConstraintLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/beacon_top_layout">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/day_of_week_arrow_left"
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/xml_background_schedule"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_calendar_arrow_left"
                    android:tint="#989898"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/day_of_week_arrow_right"
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/xml_background_schedule"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_calendar_arrow_right"
                    android:tint="#F7648F"
                    app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/day_of_week_view_pager"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:background="#DBDBDB"
                    app:layout_constraintEnd_toStartOf="@+id/day_of_week_arrow_right"
                    app:layout_constraintStart_toEndOf="@+id/day_of_week_arrow_left"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layoutListParty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/day_of_week_view_pager">

                    <ImageView
                        android:id="@+id/party_grid"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="13dp"
                        android:src="@drawable/ic_grid"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/party_list"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginBottom="13dp"
                        android:src="@drawable/ic_list"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/party_grid"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        style="@style/text_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@{String.format(@string/result_search, presenter.resultSearch)}"
                        android:textColor="@color/color161616"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/party_list"
                        app:layout_constraintLeft_toLeftOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="8dp"
                    android:text="@string/party_empty"
                    android:textColor="@color/color989898"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/layoutListParty" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutListParty" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.SwipeRefreshLayout>


        <include
            android:id="@+id/loading_layout"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{presenter.isLoading ? View.VISIBLE: View.GONE}" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_logo_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@color/windowBackground">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dialog_corrner_radius_5dp_white"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivLocation"
                    android:layout_width="231dp"
                    android:layout_height="173dp"
                    android:src="@drawable/ic_location"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="44dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_location"
                    android:textSize="12.5sp"
                    android:textColor="#5A5A5A"
                    android:gravity="center"
                    android:lineSpacingExtra="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="70dp"
                    app:layout_constraintTop_toBottomOf="@+id/ivLocation"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</layout>