<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="presenter"
            type="org.atmarkcafe.otocon.function.home.HomePresenter" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".function.home.HomeFragment">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/home_top_layout"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/home_logo"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_login"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_advanced_search"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:includeFontPadding="false"
                android:text="@string/advanced_search"
                android:textColor="@color/color161616"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="@+id/home_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/home_logo" />


            <TextView
                android:id="@+id/home_login"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:drawableLeft="@drawable/ic_avatar_login"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:paddingEnd="15dp"
                android:includeFontPadding="false"
                android:text="@{presenter.loggedin? @string/text_has_login: @string/text_not_login}"
                android:textColor="@color/color161616"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="@+id/home_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/home_logo" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/ColorLineMenuBottom"
                app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_top_layout">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/home_top_layout">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/app_bar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:nestedScrollingEnabled="true">

                    <android.support.design.widget.CollapsingToolbarLayout
                        android:id="@+id/collapsingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <include
                                android:id="@+id/home_slider"
                                layout="@layout/layout_home_slider"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/windowBackground"
                                app:layout_constraintBottom_toTopOf="@+id/home_search_condition"
                                app:layout_constraintTop_toTopOf="parent" />


                            <include
                                android:id="@+id/home_search_condition"
                                layout="@layout/layout_home_search_condition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/home_slider" />
                        </android.support.constraint.ConstraintLayout>

                    </android.support.design.widget.CollapsingToolbarLayout>

                </android.support.design.widget.AppBarLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <android.support.v4.widget.NestedScrollView
                        android:id="@+id/home_search_condition_scroll_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/party_grid"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="13dp"
                                android:src="@drawable/ic_grid"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/party_list"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginRight="9dp"
                                android:layout_marginBottom="13dp"
                                android:src="@drawable/ic_list"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toLeftOf="@+id/party_grid"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                style="@style/text_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="@{String.format(@string/result_search, presenter.resultSearch)}"
                                android:textColor="@color/color161616"
                                android:textSize="13sp"
                                app:layout_constraintTop_toTopOf="@+id/party_list"
                                app:layout_constraintBottom_toBottomOf="@+id/party_list"
                                app:layout_constraintLeft_toLeftOf="parent" />

                        </android.support.constraint.ConstraintLayout>
                    </android.support.v4.widget.NestedScrollView>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/tv_nodata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lineSpacingExtra="8dp"
                        android:text="@string/party_empty"
                        android:textColor="@color/color989898"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="@+id/home_recyclerview"
                        app:layout_constraintBottom_toBottomOf="@+id/home_recyclerview"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/home_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:scrollbars="vertical"
                        android:scrollbarSize="2dp"
                        android:scrollbarStyle="insideOverlay"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/home_search_condition_scroll_view" />

                </android.support.constraint.ConstraintLayout>
            </android.support.design.widget.CoordinatorLayout>
        </android.support.v4.widget.SwipeRefreshLayout>

        <include
            android:id="@+id/loading_layout"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{presenter.isLoading ? View.VISIBLE: View.GONE}" />
    </android.support.constraint.ConstraintLayout>
</layout>