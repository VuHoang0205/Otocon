<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="error"
            type="org.atmarkcafe.otocon.model.ErrorValidatePasswordModel" />

        <variable
            name="model"
            type="org.atmarkcafe.otocon.model.LoginInfoModel" />


        <variable
            name="fragment"
            type="org.atmarkcafe.otocon.function.mypage.profile.LoginInfoEditFragment" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar"
            app:navigationIcon="@drawable/ic_left">

            <TextView
                style="@style/header_toolbar"
                android:text="@string/title_edit_info_login_user" />
        </android.support.v7.widget.Toolbar>

        <include
            android:id="@+id/bottom_button_layout"
            layout="@layout/layout_register_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            bind:click="@{(view)->fragment.onSubmit()}"
            bind:text="@{@string/next}" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_button_layout"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{()->fragment.hideKeyBoard()}">

                <TextView
                    android:id="@+id/message_error"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/cus_bg_notification_email"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:padding="10dp"
                    android:text="@={fragment.errorMsg}"
                    android:textColor="@color/colorRed"
                    android:textSize="13sp"
                    android:visibility="@{!fragment.errorMsg.isEmpty() ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/email_hint"
                    style="@style/text_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:includeFontPadding="false"
                    android:setTextEndColor="@{@string/party_register_email}"
                    android:textColor="@color/color161616"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/message_error" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/email_hint"
                    app:setErrors="@{error.getEmail()}">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/xml_background_input_register_party"
                        android:gravity="center_vertical|left"
                        android:inputType="textEmailAddress"
                        android:maxLength="45"
                        android:paddingStart="12dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="0dp"
                        android:text="@={model.email}"
                        android:textColor="@color/color161616"
                        android:textSize="14sp" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/email_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:lineSpacingExtra="9dp"
                    android:text="@string/party_register_noti_2"
                    android:textColor="@color/color161616"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/input_email_layout" />

                <TextView
                    android:id="@+id/current_password_hint"
                    style="@style/text_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:includeFontPadding="false"
                    android:setTextEndColor="@{@string/profile_setting_current_password}"
                    android:textColor="@color/color161616"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/email_message" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_current_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/current_password_hint"
                    app:setErrors="@{error.getCurrent_password()}">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/current_password"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/xml_background_input_register_party"
                        android:gravity="center_vertical|left"
                        android:inputType="textPassword"
                        android:maxLength="45"
                        android:paddingStart="12dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="0dp"
                        android:text="@={model.currentPassword}"
                        android:textColor="@color/color161616"
                        android:textSize="14sp" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/current_password_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:lineSpacingExtra="9dp"
                    android:text="@string/notification_pass"
                    android:textColor="@color/color161616"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/input_current_password_layout" />

                <TextView
                    android:id="@+id/new_password_hint"
                    style="@style/text_bold"
                    android:layout_width="match_parent"
                    android:layout_height="13dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:includeFontPadding="false"
                    android:setTextEndColor="@{@string/profile_setting_new_password}"
                    android:textColor="@color/color161616"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/current_password_message" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_new_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/new_password_hint"
                    app:setErrors="@{error.getNew_password()}">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/new_password"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/xml_background_input_register_party"
                        android:gravity="center_vertical|left"
                        android:inputType="textPassword"
                        android:maxLength="45"
                        android:paddingStart="12dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="0dp"
                        android:text="@={model.newPassword}"
                        android:textColor="@color/color161616"
                        android:textSize="14sp" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/new_password_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:lineSpacingExtra="9dp"
                    android:text="@string/notification_pass"
                    android:textColor="@color/color161616"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/input_new_password_layout" />

                <TextView
                    android:id="@+id/confirm_password_hint"
                    style="@style/text_bold"
                    android:layout_width="match_parent"
                    android:layout_height="13dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:includeFontPadding="false"
                    android:setTextEndColor="@{@string/profile_setting_confirm_password}"
                    android:textColor="@color/color161616"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/new_password_message" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_confirm_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    app:errorTextAppearance="@style/ErrorText"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/confirm_password_hint"
                    app:setErrors="@{error.getNew_password_confirmation()}">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/xml_background_input_register_party"
                        android:gravity="center_vertical|left"
                        android:inputType="textPassword"
                        android:maxLength="45"
                        android:paddingStart="12dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="0dp"
                        android:text="@={model.confirmPassword}"
                        android:textColor="@color/color161616"
                        android:textSize="14sp" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/confirm_password_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:lineSpacingExtra="9dp"
                    android:text="@string/noti_party_pass_confirm"
                    android:textColor="@color/color161616"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_confirm_password_layout" />
            </android.support.constraint.ConstraintLayout>
        </ScrollView>


        <include
            android:id="@+id/loading_layout"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.constraint.ConstraintLayout>

</layout>