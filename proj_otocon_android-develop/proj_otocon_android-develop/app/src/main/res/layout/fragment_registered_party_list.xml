<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rll_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="0dp"
            app:navigationIcon="@drawable/ic_left">

            <TextView
                style="@style/header_toolbar"
                android:text="@string/title_registered_party_list" />
        </android.support.v7.widget.Toolbar>

        <View
            android:id="@+id/line_0"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ADADAD"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            style="@style/RegisteredPartyTabLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/line_0">

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/tab_before_party" />

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/tab_joined_party" />

        </android.support.design.widget.TabLayout>

        <View
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ADADAD"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout" />

        <org.atmarkcafe.otocon.extesion.NonSwipeableViewPager
            android:id="@+id/registered_party_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_1" />

    </android.support.constraint.ConstraintLayout>
</layout>
