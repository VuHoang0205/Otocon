<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="fragment"
            type="org.atmarkcafe.otocon.function.rematch.process.RematchRootProgessInputInforFragment" />

        <variable
            name="params"
            type="org.atmarkcafe.otocon.model.parameter.RequestRematchParams" />

        <variable
            name="error"
            type="org.atmarkcafe.otocon.model.response.ShareContactError" />
    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/xml_background_dialog"
            android:onClick="@{() -> fragment.onHideKeyboard()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/text_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:text="@string/title_input_request_rematch"
                android:textColor="@color/colorFontTextBlack"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/noti_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:text="@string/noti1_input_request_rematch"
                android:textColor="#808080"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <TextView
                android:id="@+id/tv_idLine"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:text="@string/line_id"
                android:textColor="@color/colorFontTextBlack"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/noti_1" />

            <EditText
                android:id="@+id/et_idline"
                style="@style/text_normal_register_party"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/xml_background_input_register"
                android:inputType="textNoSuggestions"
                android:maxLength="45"
                android:singleLine="true"
                android:text="@={params.rematch_user_request_line_id}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_idLine" />

            <TextView
                android:id="@+id/tv_email"
                style="@style/text_bold_reigster"
                android:layout_gravity="center|bottom"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:setTextEndColor="@{@string/party_register_email}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_idline" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="@{error.rematch_user_request_email.length()>0}"
                android:setTextError="@{error.rematch_user_request_email}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_email">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_email"
                    style="@style/text_normal_register_party"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@{error.errorEmail() ? @drawable/xml_background_input_register_error: @drawable/xml_background_input_register}"
                    android:inputType="textNoSuggestions|textEmailAddress"
                    android:singleLine="true"
                    android:text="@={params.rematch_user_request_email}" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/tv_tel"
                style="@style/text_bold_reigster"
                android:layout_gravity="center|bottom"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:setTextEndColor="@{@string/phone_number}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_et_email" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_et_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="@{error.rematch_user_request_tel.length()>0}"
                android:setTextError="@{error.rematch_user_request_tel}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tel">

                <EditText
                    android:id="@+id/et_tel"
                    style="@style/text_normal_register_party"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:imeOptions="actionDone"
                    android:background="@{error.errorTel() ? @drawable/xml_background_input_register_error: @drawable/xml_background_input_register}"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:text="@={params.rematch_user_request_tel}" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/tv_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:paddingTop="10dp"
                android:text="@{error.messageError}"
                android:textColor="@color/colorRed"
                android:textSize="13sp"
                android:visibility="@{error.messageError==null? View.GONE : View.VISIBLE}"
                app:layout_constraintTop_toBottomOf="@id/layout_et_tel" />

            <Button
                android:id="@+id/btnOk"
                style="@style/Button.GreenBold"
                android:layout_width="101dp"
                android:layout_height="38dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:onClick="@{() -> fragment.onSubmit()}"
                android:text="@string/next"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error" />

        </android.support.constraint.ConstraintLayout>

        <include
            android:id="@+id/loading"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </android.support.constraint.ConstraintLayout>

</layout>