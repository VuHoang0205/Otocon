<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <variable
            name="errors"
            type="java.util.Map"/>
        <variable
            name="card"
            type="org.atmarkcafe.otocon.model.CreditCard"/>

        <variable
            name="fragment"
            type="org.atmarkcafe.otocon.function.mypage.card.UpdateCreditCardFragment"/>
        <variable
            name="errorMessage"
            type="String"/>
        <variable
            name="payment_card_number"
            type="Boolean"/>

        <variable
            name="payment_card_year"
            type="Boolean"/>

        <variable
            name="payment_card_month"
            type="Boolean"/>

        <variable
            name="payment_card_secure"
            type="Boolean"/>



    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:onClick="@{() -> fragment.onHideKeyboard()}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
       >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar"
            app:navigationIcon="@drawable/ic_left">

            <TextView
                android:id="@+id/title"
                style="@style/header_toolbar"
                android:text="クレジットカード情報" />

        </android.support.v7.widget.Toolbar>

        <android.support.constraint.ConstraintLayout
            app:layout_constraintBottom_toBottomOf="@+id/bottom_button_layout"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:id="@+id/scroll_content"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/credit_card_validate_image"
                android:layout_width="103dp"
                android:layout_height="41dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/ic_bank_card"
                app:layout_constraintStart_toEndOf="@+id/credit_card_validate"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/credit_card_validate"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="ご利用頂けるカード"
                android:textColor="@color/color161616"
                android:textSize="14sp"

                app:layout_constraintBottom_toBottomOf="@+id/credit_card_validate_image"
                app:layout_constraintEnd_toStartOf="@+id/credit_card_validate_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/credit_card_validate_image" />


            <TextView
                android:text="@{errorMessage}"
                android:visibility="@{errorMessage != null ? View.VISIBLE: View.GONE}"

                android:id="@+id/credit_card_error_message"
                style="@style/ErrorText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:breakStrategy="simple"
                android:lineSpacingExtra="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/credit_card_validate_image" />

            <TextView
                android:id="@+id/card_number_hint"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:text="@string/credit_card_number"
                android:textColor="@color/color161616"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/credit_card_number_layout" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/credit_card_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="105dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="15dp"
                app:errorEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/credit_card_error_message">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText

                        android:tag="payment_card_number"
                        android:background="@{payment_card_number? @drawable/xml_background_input_register_error :@drawable/xml_background_input_register}"
                        android:id="@+id/card_number_input"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:digits="1234567890"
                        android:gravity="center"
                        android:text="@={card.number}"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="16"
                        android:padding="0dp"
                        android:textColor="@color/color161616"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </android.support.constraint.ConstraintLayout>
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/card_date_hint"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:text="@string/credit_card_date"
                android:textColor="@color/color161616"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/credit_card_date_layout" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/credit_card_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="105dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                app:errorEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/credit_card_number_layout">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/card_month"
                        style="@style/text_bold"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="@string/credit_month"
                        android:textColor="@color/color161616"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/card_year"
                        style="@style/text_bold"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="center_vertical|right"
                        android:text="@string/credit_year"
                        android:textColor="@color/color161616"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/card_month_input"
                        app:layout_constraintStart_toEndOf="@+id/card_year_input"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:background="@{payment_card_year? @drawable/xml_background_input_register_error :@drawable/xml_background_input_register}"
                        android:onClick="@{()-> fragment.onClickYear()}"
                        android:id="@+id/card_year_input"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:drawableRight="@drawable/ic_arrow_down"
                        android:editable="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:inputType="numberSigned"
                        android:text="@{card.year}"
                        android:paddingTop="0dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="0dp"
                        android:textColor="@color/color161616"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/card_year"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:background="@{payment_card_month? @drawable/xml_background_input_register_error :@drawable/xml_background_input_register}"

                        android:onClick="@{()-> fragment.onClickMonth()}"
                        android:id="@+id/card_month_input"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:drawableRight="@drawable/ic_arrow_down"
                        android:editable="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="@{card.month}"
                        android:inputType="numberSigned"
                        android:paddingTop="0dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="0dp"
                        android:textColor="@color/color161616"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/card_month"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/card_year" />

                </android.support.constraint.ConstraintLayout>
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/security_code_hint"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:text="@string/security_code"
                android:textColor="@color/color161616"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/security_code_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/security_code_layout" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/security_code_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                app:errorEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/security_code_hint"
                app:layout_constraintTop_toBottomOf="@+id/credit_card_date_layout">

                <EditText
                    android:id="@+id/security_code_input"
                    android:layout_width="88dp"
                    android:layout_height="38dp"
                    android:background="@{payment_card_secure? @drawable/xml_background_input_register_error :@drawable/xml_background_input_register}"
                    android:digits="1234567890"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="4"
                    android:padding="0dp"
                    android:text="@={card.securityCode}"
                    android:textColor="@color/color161616"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>


        </android.support.constraint.ConstraintLayout>
        <include
            bind:click="@{(v) -> fragment.onSubmit()}"
            android:id="@+id/bottom_button_layout"
            layout="@layout/layout_register_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            bind:text="@{@string/save}" />



        <include
            android:visibility="gone"
            android:id="@+id/loading"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.constraint.ConstraintLayout>
</layout>