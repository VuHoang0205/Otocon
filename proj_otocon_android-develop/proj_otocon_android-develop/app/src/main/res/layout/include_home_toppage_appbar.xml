<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_collapseMode="pin">

            <org.atmarkcafe.otocon.function.home.BannerViewPager
                android:id="@+id/viewPagerTopDetail"
                android:layout_width="match_parent"
                android:layout_height="223dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:stateListAnimator="@animator/state_click_animator">

                    <ImageView
                        android:id="@+id/imageView28"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_option_item_one"
                        android:stateListAnimator="@animator/state_click_animator" />

                    <TextView
                        android:id="@+id/viewImage"
                        style="@style/text_normal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="#E6161616"
                        android:gravity="center"
                        android:text="@string/recommended_area"
                        android:textColor="@color/colorWhite"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:stateListAnimator="@animator/state_click_animator"
                    app:layout_constraintEnd_toStartOf="@+id/constraintLayout3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/constraintLayout2"
                    app:layout_constraintTop_toBottomOf="@+id/viewPagerTopDetail">

                    <ImageView
                        android:id="@+id/imageView29"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_option_item_group_two"
                        android:stateListAnimator="@animator/state_click_animator" />

                    <TextView
                        android:id="@+id/textView50"
                        style="@style/text_normal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="#E6161616"
                        android:gravity="center"
                        android:text="@string/recommendation_gender"
                        android:textColor="@color/colorWhite"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView29" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:stateListAnimator="@animator/state_click_animator"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/constraintLayout"
                    app:layout_constraintTop_toBottomOf="@+id/viewPagerTopDetail">

                    <ImageView
                        android:id="@+id/imageView230"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_option_item_three"
                        android:stateListAnimator="@animator/state_click_animator"
                        app:layout_constraintBottom_toTopOf="@+id/textView700"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView700"
                        style="@style/text_normal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="#E6161616"
                        android:gravity="center"
                        android:text="@string/recommended_age"
                        android:textColor="@color/colorWhite"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView230" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_calandar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    style="@style/text_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/marriage_party_schedule"
                    android:textColor="@color/colorFontTextBlack"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.CollapsingToolbarLayout>

</android.support.design.widget.AppBarLayout>