<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="org.atmarkcafe.otocon.function.mypage.item.MyPageActionItem" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/action_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:src="@{item.getResIcon()}"
            app:layout_constraintBottom_toBottomOf="@+id/action_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/action_title" />

        <TextView
            android:id="@+id/action_title"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="43dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@{item.resText}"
            android:textColor="@color/colorBlackTextMenu"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sum_request"
            android:visibility="@{item.sumRequest == 0 ? View.GONE : View.VISIBLE}"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="3dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@{item.stringSumRequest}"
            android:textColor="#F7648F"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/action_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/action_noti"
            style="@style/text_bold"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="3dp"
            android:background="@drawable/background_notifi_menu"
            android:gravity="center"
            android:text="@{String.valueOf(item.noti)}"
            android:textColor="#FFFFFF"
            android:includeFontPadding="false"
            android:textSize="11.5sp"
            android:visibility="@{item.noti == 0 ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/action_title"
            app:layout_constraintStart_toEndOf="@+id/tv_sum_request"
            app:layout_constraintTop_toTopOf="@+id/action_title" />

        <ImageView
            android:id="@+id/ivMenuNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_menu_next"
            app:layout_constraintBottom_toBottomOf="@+id/action_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/action_title" />

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ColorLineMenuBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>
