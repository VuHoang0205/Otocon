<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/price_hint"
            style="@style/text_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="hint"
            android:textColor="@color/color161616"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tax_included"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:textSize="9sp"
            android:text="@string/tax_included"
            app:layout_constraintBaseline_toBaselineOf="@+id/price_hint"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/price_value"
            style="@style/text_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="value"
            android:textColor="@color/color161616"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/price_hint"
            app:layout_constraintEnd_toStartOf="@+id/tax_included" />


    </android.support.constraint.ConstraintLayout>
</layout>