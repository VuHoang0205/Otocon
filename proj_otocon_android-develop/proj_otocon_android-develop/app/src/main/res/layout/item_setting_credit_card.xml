<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="org.atmarkcafe.otocon.model.CreditCard"/>
        <variable
            name="card"
            type="org.atmarkcafe.otocon.model.CreditCard"/>
        <variable
            name="fragment"
            type="org.atmarkcafe.otocon.function.mypage.card.SettingCardChooseFragment"/>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() ->fragment.clickCreditCard(card)}"
        android:foreground="?android:attr/selectableItemBackground">

        <android.support.constraint.ConstraintLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:id="@+id/background_credit_card"
                android:layout_width="0dp"
                android:layout_height="98dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_credit_card" />

            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/credit_card_type"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                android:src="@{card.getCardType() == CreditCard.TYPE_MASTER ?@drawable/ic_master:@drawable/ic_visa}"
                app:layout_constraintStart_toStartOf="@+id/background_credit_card"
                app:layout_constraintTop_toTopOf="@+id/background_credit_card" />

            <TextView
                android:id="@+id/credit_card_number_prefix"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="64dp"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="19sp"
                app:layout_constraintEnd_toStartOf="@+id/credit_card_number"
                app:layout_constraintStart_toStartOf="@+id/background_credit_card"
                app:layout_constraintTop_toTopOf="@+id/background_credit_card" />

            <TextView
                android:id="@+id/credit_card_number"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="59dp"
                android:includeFontPadding="false"
                android:text="@{card.getNumberShow()}"
                android:textColor="@color/colorWhite"
                android:textSize="19sp"
                app:layout_constraintStart_toEndOf="@+id/credit_card_number_prefix"
                app:layout_constraintTop_toTopOf="@+id/background_credit_card" />

            <ImageView
                android:onClick="@{() ->fragment.onSetDefaultCard(card)}"
                android:id="@+id/credit_card_default"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_marginEnd="7dp"
                android:src="@{card.isDefault()? @drawable/ic_credit_card_checked: @drawable/ic_credit_card_uncheck}"
                app:layout_constraintBottom_toBottomOf="@+id/background_credit_card"
                app:layout_constraintEnd_toEndOf="@+id/background_credit_card"
                app:layout_constraintTop_toTopOf="@+id/background_credit_card" />
        </android.support.constraint.ConstraintLayout>




    </android.support.constraint.ConstraintLayout>
</layout>
