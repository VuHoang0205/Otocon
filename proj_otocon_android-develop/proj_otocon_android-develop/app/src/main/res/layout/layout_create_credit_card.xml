<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="card"
            type="org.atmarkcafe.otocon.function.mypage.card.NewCreditCard"/>

        <variable
            name="view"
            type="org.atmarkcafe.otocon.function.mypage.card.CreditCardViewHolder"/>
        <variable
            name="errorMessage"
            type="String"/>
        <variable
            name="payment_card_number"
            type="Boolean"/>

        <variable
            name="payment_card_year"
            type="Boolean"/>

        <variable
            name="payment_card_month"
            type="Boolean"/>

        <variable
            name="payment_card_secure"
            type="Boolean"/>

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:onClick="@{() -> view.onHideKeyboard()}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >


        <CheckBox
            android:checked="@{card.isCheckCreate}"
            style="@style/text_bold"
            android:drawablePadding="7dp"
            android:text="@string/card_text_add_new_card"
            android:id="@+id/checkbox"
            android:layout_width="0dp"
            android:background="@color/color_EBEBEB"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:button= "@null"
            android:drawableLeft="@drawable/ic_advanced_gender_radio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EBEBEB"
            />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/checkbox">

            <ImageView
                android:id="@+id/credit_card_validate_image"
                android:layout_width="103dp"
                android:layout_height="41dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_bank_card"
                app:layout_constraintStart_toEndOf="@+id/credit_card_validate"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/credit_card_validate"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="ご利用頂けるカード"
                android:textColor="@color/color161616"
                android:textSize="14sp"

                app:layout_constraintBottom_toBottomOf="@+id/credit_card_validate_image"
                app:layout_constraintEnd_toStartOf="@+id/credit_card_validate_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/credit_card_validate_image" />


            <TextView
                android:id="@+id/credit_card_error_message"
                style="@style/ErrorText"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:breakStrategy="simple"
                android:lineSpacingExtra="8dp"
                android:text="@{errorMessage}"
                android:visibility="@{errorMessage != null ? View.VISIBLE: View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/credit_card_validate_image" />

            <TextView
                android:id="@+id/card_number_hint"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:text="@string/credit_card_number"
                android:textColor="@color/color161616"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/credit_card_number_layout" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/credit_card_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="105dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="15dp"
                app:errorEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/credit_card_error_message">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/card_number_input"

                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:background="@{payment_card_number? @drawable/xml_background_input_register_error :@drawable/xml_background_input_register}"
                        android:digits="1234567890"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:isScrollContainer="false"
                        android:maxLength="16"
                        android:padding="0dp"
                        android:tag="payment_card_number"
                        android:text="@={card.number}"
                        android:textColor="@color/color161616"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </android.support.constraint.ConstraintLayout>
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/card_date_hint"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:text="@string/credit_card_date"
                android:textColor="@color/color161616"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/credit_card_date_layout" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/credit_card_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="105dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                app:errorEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/credit_card_number_layout">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/card_month"
                        style="@style/text_bold"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="@string/credit_month"
                        android:textColor="@color/color161616"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/card_year"
                        style="@style/text_bold"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="center_vertical|right"
                        android:text="@string/credit_year"
                        android:textColor="@color/color161616"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/card_month_input"
                        app:layout_constraintStart_toEndOf="@+id/card_year_input"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/card_year_input"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:background="@{payment_card_year? @drawable/xml_background_input_register_error :@drawable/xml_background_input_register}"
                        android:drawableRight="@drawable/ic_arrow_down"
                        android:editable="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:inputType="numberSigned"
                        android:onClick="@{()-> view.onClickYear()}"
                        android:paddingTop="0dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="0dp"
                        android:text="@{card.year}"
                        android:textColor="@color/color161616"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/card_year"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/card_month_input"

                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:background="@{payment_card_month? @drawable/xml_background_input_register_error :@drawable/xml_background_input_register}"
                        android:drawableRight="@drawable/ic_arrow_down"
                        android:editable="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:inputType="numberSigned"
                        android:onClick="@{()-> view.onClickMonth()}"
                        android:paddingTop="0dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="0dp"
                        android:text="@{card.month}"
                        android:textColor="@color/color161616"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/card_month"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/card_year" />

                </android.support.constraint.ConstraintLayout>
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/security_code_hint"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:text="@string/security_code"
                android:textColor="@color/color161616"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/security_code_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/security_code_layout" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/security_code_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                app:errorEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/security_code_hint"
                app:layout_constraintTop_toBottomOf="@+id/credit_card_date_layout">

                <EditText
                    android:id="@+id/security_code_input"
                    android:layout_width="88dp"
                    android:layout_height="38dp"
                    android:background="@{payment_card_secure? @drawable/xml_background_input_register_error :@drawable/xml_background_input_register}"
                    android:digits="1234567890"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="4"
                    android:padding="0dp"
                    android:text="@={card.securityCode}"
                    android:textColor="@color/color161616"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/credit_card_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:text="@string/card_bottom"
                android:textColor="@color/color161616"
                android:textSize="12sp"
                android:lineSpacingExtra="6dp"
                android:layout_marginBottom="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/security_code_layout" />


            <View
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/colorWhite"
                android:clickable="true" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>