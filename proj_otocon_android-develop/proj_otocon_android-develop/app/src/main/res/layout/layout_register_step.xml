<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <import type="org.atmarkcafe.otocon.utils.StringUtils"/>
        <variable
            name="step"
            type="int" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.constraint.ConstraintLayout

            android:layout_marginBottom="12dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="690:78"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:visibility="@{step == 1? View.VISIBLE: View.GONE}"
                android:background="@drawable/r_step1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:visibility="@{step == 2? View.VISIBLE: View.GONE}"
                android:background="@drawable/r_step2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:visibility="@{step == 3? View.VISIBLE: View.GONE}"
                android:background="@drawable/r_step3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:visibility="@{step == 4? View.VISIBLE: View.GONE}"
                android:background="@drawable/r_step4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:visibility="@{step == 5? View.VISIBLE: View.GONE}"
                android:background="@drawable/r_step5"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/step1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Text_step"
                app:registerPartyTextStep="@{1}"
                android:textColor="@{step == 1 ? @color/colorWhite :  @color/color_3f3f3f}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/step2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Text_step"
                android:textColor="@{step == 2 ? @color/colorWhite :  @color/color_3f3f3f}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/step1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2"
                app:registerPartyTextStep="@{2}" />

            <TextView
                android:id="@+id/step3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Text_step"
                android:textColor="@{step == 3 ? @color/colorWhite :  @color/color_3f3f3f}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/step2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2"
                app:registerPartyTextStep="@{3}" />

            <TextView
                android:id="@+id/step4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Text_step"
                android:textColor="@{step == 4 ? @color/colorWhite :  @color/color_3f3f3f}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/step3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2"
                app:registerPartyTextStep="@{4}" />

            <TextView
                android:id="@+id/step5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Text_step"
                android:textColor="@{step == 5 ? @color/colorWhite :  @color/color_3f3f3f}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/step4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2"
                app:registerPartyTextStep="@{5}" />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</layout>
