<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_height="40dp">

        <TextView

            android:id="@+id/title_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            style="@style/text_bold"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            android:textSize="13dp" />

        <RadioGroup
            android:layout_alignParentEnd="true"
            android:layout_gravity="center|right"
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:orientation="horizontal"
            android:paddingRight="15dp">

            <TextView

                style="@style/text_normal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:id="@+id/title_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"

                android:layout_marginLeft="15dp"
                android:background="@drawable/xml_type_title"
                android:gravity="center"
                android:textSize="13dp" />

            <RadioButton
                android:id="@+id/rb_list"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@drawable/xml_home_select_list"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_grid"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@drawable/xml_home_select_grid"
                android:button="@null" />
        </RadioGroup>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listview"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>