<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/register_party_form_title"
        style="@style/ContactUSTitle"/>

    <EditText
        android:id="@+id/register_party_form_edit_text"
        style="@style/ContactUSViewCornersRounded"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:labelFor="@id/register_party_form_edit_text"
        app:layout_constraintTop_toBottomOf="@id/register_party_form_title" />

</android.support.constraint.ConstraintLayout>