<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- <item name="android:typeface">monospace</item> -->
    <style name="AppThemeV21" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>

        <!-- Status bar stuff. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_pro_w3</item>
    </style>

    <style name="AppTheme" parent="AppThemeV21">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- dialog -->
    <style name="app_base_them_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowFixedWidthMajor">100%</item>
        <item name="windowFixedWidthMinor">100%</item>
        <item name="windowFixedHeightMajor">100%</item>
        <item name="windowFixedHeightMinor">100%</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_pro_w3</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!-- Base Animation -->
    <style name="dialog_base_no_actionbar" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme_Dialog" parent="app_base_them_dialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="apptheme_dialog_right_in" parent="app_base_them_dialog">
        <item name="android:windowEnterAnimation">@anim/slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/slide_right_out</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- TextInputLayout Error type -->
    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Button.Green" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/xlm_background_button_login</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:textAppearance">@style/text_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.GreenBold" parent="Button.Green">
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_pro_w6</item>
    </style>

    <style name="Button.Login" parent="Button.Green">
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_pro_w6</item>
    </style>

    <style name="Button.Register" parent="Button.Green">
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_pro_w6</item>
    </style>

    <style name="AppThemeLoginStyle" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="status_party">
        <item name="android:background">@drawable/xml_background_status_party_transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">7.5sp</item>
    </style>

    <style name="AppThemePartyDetailStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">#33F7648F</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/xml_tablayout_background_selected</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/TextAppearance.Tabs.UnSelected</item>
    </style>

    <style name="RegisteredPartyTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/xml_registered_tablayout_background</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/TextAppearance.Tabs</item>
    </style>

    <style name="PictureTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorWhite</item>
        <item name="tabSelectedTextColor">@color/color_F7648F</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/Picture.Tabs</item>
        <item name="android:icon">@drawable/ic_camera</item>
    </style>
    <style name="Picture.Tabs" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_pro_w6</item>
        <item name="android:textColor">@color/colorDefaultItemAdvanced</item>
    </style>

    <style name="TextAppearance.Tabs" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_pro_w6</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextAppearance.Tabs.Selected">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_pro_w6</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.Tabs.UnSelected"  parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_pro_w3</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="header_toolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_pro_w6</item>
        <item name="android:textColor">@color/colorFontTextBlack</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Black" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/xml_background_button_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_pro_w6</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
